.block-holder
  .block-register
    .holder
      .frame
        / box-register
        .box-register
          .title
            %h1 Register
          - form_for @user, :url => users_path, :html => {:class => "form-register #{@user.errors.length > 0 ? 'form-error' : ''}"} do |form|
            = render :partial => 'user', :object => form
        / box-login
        .box-login
          .title
            %h2 Login
          - form_for @user_session, :url => user_session_path, :html => {:class => 'form-login'} do |form|
            = render :partial => 'login', :object => form

