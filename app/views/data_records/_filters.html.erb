<% form_for @filters, :url => data_records_path, :html => { :method => :get, :id => 'filterDataForm' } do |form| %>
  <div id="filterData">
    <ul>
      <li>
        <%= form.label :location, "Coverage" %>
        <%= form.select :location, all_locations_for_select("All", "-------------"), :disabled => "-------------" %>
      </li>

      <li>
        <%= form.label :ministry_organization, "Organization" %>
        <%= form.select :ministry_organization, ministries_and_organizations_for_select(@filters.ministry_organization) %>
      </li>

      <li>
        <%= form.label :release_year, "Release Year" %>
        <%= form.select :release_year, years_for_select, :disabled => "-------------" %>
      </li>

      <li>
        <%= form.label :document_type, "Record Type" %>
        <%= form.select :document_type, document_types_for_select, :disabled => "-------------" %>
      </li>

      <li id="submit">
        <button class="filterBtn" type="submit">
          <span>Filter Data</span>
        </button>
      </li>
    </ul>

    <div class="clear"></div>
  </div>
<% end %>
